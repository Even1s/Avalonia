<Window
    SizeToContent="Height"
    Title="Авторизация"
    Width="350"
    mc:Ignorable="d"
    x:Class="CafeApp.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="10" Spacing="10">

        <TextBlock
            FontSize="24"
            Text="Авторизация"
            TextAlignment="Center" />
        <TextBlock
            FontSize="20"
            Foreground="Red"
            IsVisible="False"
            Name="ErrorTBlock"
            Text="фывфывфывфы фывфывфывфы ывфывфывфывф ыв фывфывфывфы фвыфвфывф"
            TextWrapping="WrapWithOverflow"
            Width="330" />

        <TextBlock FontSize="20">Логин</TextBlock>
        <TextBox FontSize="18" Name="LoginTBox" />
        <TextBlock FontSize="20">Пароль</TextBlock>
        <TextBox FontSize="18" Name="PasswordTBox" />

        <Button
            Click="AuthFetch"
            FontSize="20"
            HorizontalAlignment="Center"
            Name="AuthBtn">
            Авторизоваться
        </Button>
    </StackPanel>

</Window>
