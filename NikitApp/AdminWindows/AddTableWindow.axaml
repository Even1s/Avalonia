<Window
    SizeToContent="Height"
    Title="Создание столика"
    Width="270"
    x:Class="NikitApp.AdminWindows.AddTableWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel
        Margin="20"
        Orientation="Vertical"
        Spacing="10">
        <TextBlock
            FontSize="24"
            Text="Создание столика"
            TextAlignment="Center" />

        <TextBlock FontSize="20">Номер</TextBlock>
        <TextBox Name="NumberTextBox" />

        <TextBlock
            FontSize="20"
            Foreground="Red"
            IsVisible="False"
            Name="ErrorTextBlock" />

        <StackPanel Orientation="Horizontal" Spacing="20">
            <Button
                Click="SaveBtn_OnClick"
                Content="Создать"
                HorizontalContentAlignment="Center"
                Name="SaveBtn"
                Width="105" />
            <Button
                Click="CancelBtn_OnClick"
                Content="Отмена"
                HorizontalContentAlignment="Center"
                Name="CancelBtn"
                Width="105" />
        </StackPanel>
    </StackPanel>

</Window>
